#!/bin/bash
#
# modular script to copy websites
#
# module -l-l-rdb-rdb
#
# website local-to-local
# database remote-to-remote
#
# expected config options
#
# - COPY_FILES
# - WEBSITE_ORIG_PATH
# - WEBSITE_COPY_PATH
#
# for override files:
# - OVERRIDE_FILES
# - WEBSITE_LOCAL_USER
# - OVERRIDE_PATH
#
# for copy database:
# - COPY_DB
# - DB_SERVER
# - DB_PRIV_USER
# - DB_ORIG_NAME
# - DB_COPY_NAME
# - DB_COPY_USER
# - DB_COPY_ACCESS_HOST
# - DB_COPY_PASS

. functions

check_args "$@"

if $COPY_FILES; then
    copy_files_local
fi

if $OVERRIDE_FILES; then
    override_files
fi

if $COPY_DB; then
    create_remote_db
    copy_database_remote
fi

if $AUTO_EDIT_JOOMLA_CONFIG; then
    edit_joomla_config
fi

echo "finished!"
